<configuration>

    <l1>en</l1>
    <l2>cs</l2>

    <database>
        <connector>jdbc:postgresql://localhost/filmtit</connector>
        <user>postgres</user>
        <password>postgres</password>
    </database>

    <model_path>NE_models/</model_path>
    <ner_models>
        <!-- English -->
        <ner_model language="en" type="Person">en/person.bin</ner_model>
        <ner_model language="en" type="Place">en/place.bin</ner_model>
        <ner_model language="en" type="Organization">en/organization.bin</ner_model>

        <!-- Czech -->
        <ner_model language="cs" type="Person">cs/person.bin</ner_model>
        <ner_model language="cs" type="Place">cs/place.bin</ner_model>
        <ner_model language="cs" type="Organization">cs/organization.bin</ner_model>
    </ner_models>

    <import>
        <data_folder>/filmtit/data/utf8_aligned</data_folder>
        <file_mediasource_mapping>/filmtit/data/export_final.txt</file_mediasource_mapping>
        <batch_size>100</batch_size>
        <imdb_cache>/filmtit/data/imdb_cache</imdb_cache>

        <expected_number_of_translationpairs>20000000</expected_number_of_translationpairs>
        <heldout>
            <size>0.02</size>
            <path>/filmtit/heldout.csv</path>
        </heldout>
    </import>

    <userspace>
        <session_timeout_limit>3600000</session_timeout_limit>
    </userspace>

    <core>
        <max_number_of_concurrent_searchers>5</max_number_of_concurrent_searchers>
        <searcher_timeout>60</searcher_timeout> <!--in seconds-->
    </core>

</configuration>
