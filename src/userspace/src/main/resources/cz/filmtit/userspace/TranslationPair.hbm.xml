<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.share">

    <class name="cz.filmtit.share.TranslationPair" table="USTranslationPairs">

        <id name="id" type="long" column="Id">
            <generator class="native"/>
        </id>

        <property name="stringL1" type="java.lang.String" column="form1" />
        <property name="stringL2" type="java.lang.String" column="form2" />
        <property name="score" type="java.lang.Double" column="score" />

        <property name="source" type="cz.filmtit.share.TranslationSource" />


        <list name="mediaSources" table="USMediaSources" lazy="false">
            <key column="USMediaSourceId" />
            <index column="listIndex" />
            <element type="cz.filmtit.share.MediaSource" />
        </list>

    </class>
</hibernate-mapping>
