<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.share">

    <class name="TranslationPair" table="translationpairs">

        <id name="id" type="long" column="pair_id">
            <generator class="native"/>
        </id>

        <property name="stringL1" type="java.lang.String" column="chunk_l1" />
        <property name="stringL2" type="java.lang.String" column="chunk_l2" />
        <property name="score" type="java.lang.Double" column="score" />
        <property name="count" type="java.lang.Integer" column="pair_count" />

        <!-- <property name="source" type="cz.filmtit.share.TranslationSource" /> -->

        <set name="mediaSourcesSet" table="translationpairs_mediasources" lazy="false" cascade="all">
            <key column="pair_id" />
            <many-to-many column="source_id" class="cz.filmtit.share.MediaSource" />
        </set>

    </class>
</hibernate-mapping>
