<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.share">

    <class name="cz.filmtit.share.MediaSource" table="USMediaSources">
        <id name="id" type="long" column="Id">
            <generator class="native"/>
        </id>

        <property name="id" type="java.lang.Long" column="coreId"/>
        <property name="title" type="java.lang.String" column="title" />
        <property name="year" type="java.lang.String" column="year" />

        <set name="genres" table="USGenres" lazy="false">
            <key column="genreId" />
            <element type="java.lang.String" />
        </set>

    </class>
</hibernate-mapping>