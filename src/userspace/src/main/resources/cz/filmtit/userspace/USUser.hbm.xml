<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.userspace">

    <class name="USUser" table="Users">
        <id name="databaseId" type="long" column="Id">
            <generator class="native"/>
        </id>

        <property name="userName" type="java.lang.String" column="userName" />
        <property name="login" type="java.lang.String" column="login" />
        <property name="email" type="java.lang.String" column="email" />
        <property name="openID" type="java.lang.String" column="openId" />
        <property name="fbid" type="long" column="fbId" />
        <property name="active" type="boolean" column="active" />
        <property name="lastSession" type="java.util.Date" column="lastSession" />

        <set name="activeDocumentIDs" table="ActiveDocumentIDs" lazy="false">
            <key column="TranslationResultId"/>
            <one-to-many class="USDocument" />
        </set>

    </class>

</hibernate-mapping>