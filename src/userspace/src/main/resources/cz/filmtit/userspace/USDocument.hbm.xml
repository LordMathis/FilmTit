<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.userspace">

    <class name="USDocument" table="Documents">
        <id name="databaseId" type="long" column="Id">
            <generator class="native"/>
        </id>

        <property name="ownerDatabaseId" type="long" column="userId" />
        <property name="movieTitle" type="java.lang.String" column="title" />
        <property name="year" type="int" column="year" />
        <property name="spentOnThisTime" type="long" column="spentOnThisTime" />
        <property name="languageCode" type="java.lang.String" column="language" />
        <property name="translationGenerationTime" type="long" column="translationGenerationTime" />
        <property name="finished" type="boolean" column="finished" />

    </class>

</hibernate-mapping>
