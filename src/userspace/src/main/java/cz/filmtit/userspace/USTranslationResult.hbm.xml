<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cz.filmtit.userspace">

    <class name="USTranslationResult" table="TranslationResults">
        <id name="databaseId" type="long" column="Id">
            <generator class="native"/>
        </id>

        <!-- name, type, column -->
        <property name="text" type="java.lang.String" column="text"/>
        <property name="documentDatabaseId" type="long" column="documentId" />
        <property name="startTime" type="java.lang.String" column="startTime" />
        <property name="endTime" type="java.lang.String" column="endTime" />
        <property name="partNumber" type="int" column="partNumber" />
        <property name="userTranslation" type="java.lang.String" column="userTranslation" />
        <property name="selectedTranslationPairID" type="long" column="selectedTranslationPairID" />
        <property name="sharedId" type="int" column="sharedId" />

        <list name="tmSuggestions" table="TranslationPairs">
            <key column="TranslationResultId"/>
            <index column="listIndex"/>
            <composite-element class="cz.filmtit.share.TranslationPair">
                <property name="stringL1" type="java.lang.String" column="form1" />
                <property name="stringL2" type="java.lang.String" column="form2" />
                <property name="score" type="java.lang.Double" column="score" />
            </composite-element>
        </list>

    </class>

</hibernate-mapping>
