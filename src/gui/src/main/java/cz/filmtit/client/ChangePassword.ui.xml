<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
    <g:HTMLPanel>

        <b:Heading size="3">Set New Password</b:Heading>

        <b:Form type="HORIZONTAL" ui:field="changePasswordForm">
            <b:Fieldset>

                <b:ControlGroup>
                    <b:ControlLabel>User name:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="txtName"></b:TextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>New password:</b:ControlLabel>
                    <b:Controls>
                        <b:PasswordTextBox ui:field="txtPassword"></b:PasswordTextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>Repeat password:</b:ControlLabel>
                    <b:Controls>
                        <b:PasswordTextBox ui:field="txtPasswordRepeat"></b:PasswordTextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:Controls>
                        <b:Button ui:field="btnRegister" type="PRIMARY">Change password</b:Button>
                    </b:Controls>
                </b:ControlGroup>
                
                <b:ControlGroup>
                    <b:Controls>
                        <b:Button ui:field="btnCancel">Cancel</b:Button>
                    </b:Controls>
                </b:ControlGroup>
                
            </b:Fieldset>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder> 