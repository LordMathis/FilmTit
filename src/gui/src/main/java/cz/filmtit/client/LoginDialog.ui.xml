<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel>
        <b:Form type="HORIZONTAL" ui:field="loginForm">
            <b:Fieldset>

                <b:ControlGroup>
                    <b:ControlLabel>User name:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="txtUsername"></b:TextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>Password:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="txtPassword"></b:TextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:SubmitButton ui:field="btnLogin">Login</b:SubmitButton>

            </b:Fieldset>
        </b:Form>
    </g:HTMLPanel>

</ui:UiBinder> 