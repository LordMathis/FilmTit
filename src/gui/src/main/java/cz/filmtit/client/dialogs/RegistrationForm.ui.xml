<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
    <g:HTMLPanel>

        <b:Modal ui:field="dialogBox" title="Registration" backdrop="STATIC" keyboard="true" animation="true">

            <b:Form type="HORIZONTAL" ui:field="registrationForm">
                <b:Fieldset>

                    <b:ControlGroup>
                        <b:ControlLabel>User name:</b:ControlLabel>
                        <b:Controls>
                            <b:TextBox ui:field="txtUsername"></b:TextBox>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:ControlGroup>
                        <b:ControlLabel>Password:</b:ControlLabel>
                        <b:Controls>
                            <b:PasswordTextBox ui:field="txtPassword"></b:PasswordTextBox>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:ControlGroup>
                        <b:ControlLabel>Repeat password:</b:ControlLabel>
                        <b:Controls>
                            <b:PasswordTextBox ui:field="txtPasswordRepeat"></b:PasswordTextBox>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:ControlGroup>
                        <b:ControlLabel>E-mail address:</b:ControlLabel>
                        <b:Controls>
                            <b:TextBox ui:field="txtEmail"></b:TextBox>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:ModalFooter>

                        <b:ControlGroup>
                            <b:Controls>
                                <b:Button ui:field="btnRegister" type="PRIMARY">Register</b:Button>
                                <b:Button ui:field="btnCancel">Cancel</b:Button>
                            </b:Controls>
                        </b:ControlGroup>

                    </b:ModalFooter>


                </b:Fieldset>
            </b:Form>
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder> 