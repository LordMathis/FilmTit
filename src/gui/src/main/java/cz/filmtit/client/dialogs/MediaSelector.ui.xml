<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:HTMLPanel>
        <b:Modal ui:field="dialogBox" title="Select the movie" backdrop="STATIC" keyboard="true" animation="true" closeVisible="true">
	        <b:WellForm>
	            <b:ControlLabel>Which one of these movies did you mean?</b:ControlLabel>
	            <c:CellList ui:field="listbox" />
	            <b:Button ui:field="submitButton" type="PRIMARY">Submit</b:Button>
	        </b:WellForm>
        </b:Modal>
    </g:HTMLPanel>

</ui:UiBinder>