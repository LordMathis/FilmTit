             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:my="urn:import:cz.filmtit.client.dialogs">
    <ui:style>

    </ui:style>
    <g:HTMLPanel>
        <my:CustomModal ui:field="dialogBox" 
                        title="Reload Document" 
                        backdrop="STATIC" 
                        keyboard="true">
            <b:ControlGroup>
                <b:ControlLabel>The number of subtitle items has been changed. The document will be reloaded. All your changes have been saved</b:ControlLabel>
                <b:Controls>
                                        
                    <b:Button ui:field="submitBtn" type="PRIMARY">Confirm</b:Button> 
                       
                </b:Controls>
            </b:ControlGroup>
            
        </my:CustomModal>
