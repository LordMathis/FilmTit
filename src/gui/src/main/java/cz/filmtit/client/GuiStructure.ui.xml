<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:lgf="urn:import:org.vectomatic.file">


    <g:HTMLPanel styleName="filmtit_container">
        <div id="content">

        <b:ResponsiveNavbar>
            <b:Brand>Filmtit</b:Brand>
            <b:Nav>
                <b:NavLink ui:field="loginlink">Test</b:NavLink>
                <b:NavLink href="http://www.google.com">Another Test</b:NavLink>
            </b:Nav>
            <b:Nav alignment="RIGHT">
                <b:NavLink ui:field="guestlogin">Log in as guest</b:NavLink>
            </b:Nav>

            <b:NavSearch size="2" placeholder="Search" alignment="RIGHT"/>
        </b:ResponsiveNavbar>


        <b:Row>
            <b:Column size="7">

                <b:Heading size="2" subtext="translate your subtitles!">
                    FilmTit
                </b:Heading>

                <b:FluidRow>
                    <g:ScrollPanel ui:field="scrollPanel" stylePrimaryName="scrollPanel" width="984px" />
                </b:FluidRow>
                
                <b:FluidRow>
                    <b:FluidRow>
                        <b:Label>Debug outputs:</b:Label>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:TextArea ui:field="txtDebug" width="400px" height="300px" />
                    </b:FluidRow>
                </b:FluidRow>

            </b:Column>
        </b:Row>

        </div>
    </g:HTMLPanel>

</ui:UiBinder>
