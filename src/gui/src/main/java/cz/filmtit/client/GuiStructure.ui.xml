             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:lgf="urn:import:org.vectomatic.file">


    <g:HTMLPanel styleName="filmtit_container">

        <b:Navbar position="TOP">
            <b:Brand>Filmtit</b:Brand>
            <b:Nav>
                <b:NavLink ui:field="welcomePage" href="?page=WelcomePage">Start</b:NavLink>
            </b:Nav>
            <b:Nav>
                <b:NavLink ui:field="userPage" href="?page=UserPage">Document list</b:NavLink>
            </b:Nav>
            <b:Nav>
                <b:NavLink ui:field="documentCreator" href="?page=DocumentCreator">New document</b:NavLink>
            </b:Nav>
            <b:Nav alignment="RIGHT">
                <b:NavLink ui:field="about" href="?page=About">About</b:NavLink>
            </b:Nav>
            <b:Nav alignment="RIGHT">
                <b:NavLink ui:field="login">Log in</b:NavLink>
            </b:Nav>

        </b:Navbar>


        <div id="content">

        <b:Row>
            <b:Column size="7">

                <b:FluidRow>
                    <g:ScrollPanel ui:field="contentPanel" stylePrimaryName="contentPanel" width="984px" />
