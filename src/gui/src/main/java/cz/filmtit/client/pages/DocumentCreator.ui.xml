<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:lgf="urn:import:org.vectomatic.file">


    <g:HTMLPanel styleName="new_document">
        <b:PageHeader subtext="Start a new subtitle document">New Document</b:PageHeader>

        <b:Form type="HORIZONTAL" ui:field="movieInfoForm">
            <b:Fieldset>


                <b:ControlGroup>
                    <b:ControlLabel>Title of the movie or the TV show:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="txtMovieTitle"></b:TextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>Document title:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="txtTitle"></b:TextBox>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>Subtitle source language:</b:ControlLabel>
                    <b:Controls>
                        <b:ListBox ui:field="lsbLanguage">
                            <g:item id="en" value="en">English</g:item>
                            <g:item id="cs" value="cs">Czech</g:item>
                        </b:ListBox>
                    </b:Controls>
                </b:ControlGroup>


            </b:Fieldset>


            <b:Fieldset>
                <b:Legend>Load subtitles file</b:Legend>

                <b:ControlGroup>
                    <b:ControlLabel>Subtitle file format:</b:ControlLabel>
                    <b:Controls>
                        <b:RadioButton ui:field="rdbFormatSrt" name="file format"
                                       value="true">.srt</b:RadioButton>
                        <b:RadioButton ui:field="rdbFormatSub" name="file format">.sub</b:RadioButton>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>Choose file encoding:</b:ControlLabel>
                    <b:Controls>
                        <b:RadioButton ui:field="rdbEncodingUtf8" name="file encoding"
                                       value="true">UTF-8</b:RadioButton>
                        <b:RadioButton ui:field="rdbEncodingWin" name="file encoding">windows-1250</b:RadioButton>
                        <b:RadioButton ui:field="rdbEncodingIso" name="file encoding">iso-8859-2</b:RadioButton>
                    </b:Controls>
                </b:ControlGroup>
                <b:ControlGroup>
                    <b:Controls>
                        <lgf:FileUploadExt ui:field="fileUpload" />
                        <b:Label ui:field="lblUploadProgress" visible="false"></b:Label>
                    </b:Controls>
                </b:ControlGroup>
            </b:Fieldset>


            <b:Fieldset>
                <b:Legend>Movie playback</b:Legend>
                <b:NavLink ui:field="playerInfo" targetHistoryToken="PlayerInfo">Info on how to use the player</b:NavLink>

                <b:ControlGroup>
                    <b:ControlLabel>Movie address on the disk:</b:ControlLabel>
                    <b:Controls>
                        <b:TextBox ui:field="moviePath"></b:TextBox>
                        <b:Button ui:field="btnApplet">Load</b:Button>
                    </b:Controls>
                </b:ControlGroup>
            </b:Fieldset>



            <b:Fieldset>
                <b:FormActions ui:field="bottomControlGroup">
                    <b:Controls>
                        <b:Button type="PRIMARY" ui:field="btnCreateDocument" enabled="false">Create document</b:Button>
                        <b:Label ui:field="lblCreateProgress" visible="false"></b:Label>
                    </b:Controls>
                </b:FormActions>
            </b:Fieldset>
        </b:Form>

    </g:HTMLPanel>

</ui:UiBinder> 
