<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:lgf="urn:import:org.vectomatic.file">


	<g:HTMLPanel styleName="new_document">
	
		<b:Heading size="3">Start a new subtitle document</b:Heading>

		<b:Form type="HORIZONTAL" ui:field="movieInfoForm">
			<b:Fieldset>
			
					<b:ControlGroup>
						<b:ControlLabel>Movie title:</b:ControlLabel>
						<b:Controls>
							<b:TextBox ui:field="txtMovieTitle"></b:TextBox>
						</b:Controls>
					</b:ControlGroup>

					<b:ControlGroup>
						<b:ControlLabel>Movie year:</b:ControlLabel>
						<b:Controls>
							<b:TextBox ui:field="txtMovieYear"></b:TextBox>
						</b:Controls>
					</b:ControlGroup>
					
					<b:ControlGroup>
						<b:ControlLabel>Choose subtitle format:</b:ControlLabel>
						<b:Controls>
							<b:RadioButton ui:field="rdbFormatSrt" name="file format"
								value="true">.srt</b:RadioButton>
							<b:RadioButton ui:field="rdbFormatSub" name="file format">.sub</b:RadioButton>
						</b:Controls>
					</b:ControlGroup>
					
			</b:Fieldset>
		</b:Form>

		<b:Heading size="4">Load subtitles:</b:Heading>
		<b:TabPanel tabPosition="left" ui:field="tbpLoadFrom">
			<b:TabPane ui:field="tabLoadFromFile" heading="from file" href="fromfile">
				<b:Paragraph>From a file:</b:Paragraph>
				<b:Form type="HORIZONTAL" ui:field="fileUploadForm">
					<b:Fieldset>
					
						<b:ControlGroup>
							<b:ControlLabel>Choose file encoding:</b:ControlLabel>
							<b:Controls>
								<b:RadioButton ui:field="rdbEncodingUtf8" name="file encoding"
									value="true">UTF-8</b:RadioButton>
								<b:RadioButton ui:field="rdbEncodingWin" name="file encoding">windows-1250</b:RadioButton>
								<b:RadioButton ui:field="rdbEncodingIso" name="file encoding">iso-8859-2</b:RadioButton>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlGroup>
							<b:ControlLabel>Choose the file with subtitles:</b:ControlLabel>
							<b:Controls>
								<lgf:FileUploadExt ui:field="fileUpload" />
							</b:Controls>
						</b:ControlGroup>
					</b:Fieldset>
				</b:Form>
			</b:TabPane>
			
			<b:TabPane ui:field="tabLoadFromPaste" heading="from text - paste" href="frompaste">
				<b:Paragraph>...or paste the subtitles here and click "Load":</b:Paragraph>
	            <b:TextArea styleName="subtitle_paste_box" ui:field="txtFileContentArea" />
	            <b:SubmitButton ui:field="btnSendToTm">Load</b:SubmitButton>
			</b:TabPane>
		</b:TabPanel>
        
	</g:HTMLPanel>
	
</ui:UiBinder> 